{
  "name": "@vegaprotocol/crypto",
  "version": "0.2.1",
  "description": "Crypto operations for Vega supporting Node.js and Browsers",
  "type": "module",
  "main": "./lib/vega-wallet.js",
  "scripts": {
    "bundle": "rollup -c",
    "watch": "rollup -c -w",
    "lint": "standard lib",
    "test": "tape 'test/**/*.js'"
  },
  "browser": {
    "./lib/crypto.js": "./lib/browser-crypto.js"
  },
  "exports": {
    ".": "./lib/vega-wallet.js",
    "./*": "./lib/*.js",
    "./*.js": "./lib/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vegaprotocol/js-crypto.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vegaprotocol/js-crypto/issues"
  },
  "homepage": "https://github.com/vegaprotocol/js-crypto#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@wasm-tool/rollup-plugin-rust": "^1.0.7",
    "rollup": "^2.58.3",
    "standard": "^16.0.4",
    "tape": "^5.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "nanoassert": "^2.0.0"
  }
}
